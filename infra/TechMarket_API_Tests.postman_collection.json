	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Log da requisição",
					"console.log('Executando: ' + pm.info.requestName);"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Testes básicos para todas as requisições",
					"pm.test('Status code is not 500', function () {",
					"    pm.expect(pm.response.code).to.not.equal(500);",
					"});",
					"",
					"pm.test('Response time is less than 5000ms', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(5000);",
					"});",
					"",
					"// Testes específicos por requisição",
					"if (pm.info.requestName === 'Health Check') {",
					"    pm.test('Health check returns 200', function () {",
					"        pm.response.to.have.status(200);",
					"    });",
					"}",
					"",
					"if (pm.info.requestName === 'Transferência Válida') {",
					"    pm.test('Transfer successful', function () {",
					"        pm.response.to.have.status(200);",
					"    });",
					"    ",
					"    pm.test('Response has codigo', function () {",
					"        const jsonData = pm.response.json();",
					"        pm.expect(jsonData.codigo).to.exist;",
					"    });",
					"    ",
					"    pm.test('Response has status success', function () {",
					"        const jsonData = pm.response.json();",
					"        pm.expect(jsonData.status).to.eql('success');",
					"    });",
					"}",
					"",
					"if (pm.info.requestName === 'Transferência - Saldo Insuficiente') {",
					"    pm.test('Returns insufficient balance error', function () {",
					"        pm.response.to.have.status(400);",
					"    });",
					"    ",
					"    pm.test('Error message is correct', function () {",
					"        const jsonData = pm.response.json();",
					"        pm.expect(jsonData.error).to.eql('Insufficient balance');",
					"    });",
					"}",
					"",
					"if (pm.info.requestName === 'Transferência - Conta Não Encontrada') {",
					"    pm.test('Returns account not found error', function () {",
					"        pm.response.to.have.status(404);",
					"    });",
					"    ",
					"    pm.test('Error message is correct', function () {",
					"        const jsonData = pm.response.json();",
					"        pm.expect(jsonData.error).to.eql('Account not found');",
					"    });",
					"}",
					"",
					"if (pm.info.requestName === 'Transferência - Valor Negativo') {",
					"    pm.test('Returns validation error', function () {",
					"        pm.response.to.have.status(400);",
					"    });",
					"    ",
					"    pm.test('Error message is correct', function () {",
					"        const jsonData = pm.response.json();",
					"        pm.expect(jsonData.error).to.eql('Validation failed');",
					"    });",
					"}"
				]
			}
		}
